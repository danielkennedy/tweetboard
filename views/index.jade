doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    link(href='/stylesheets/bootstrap.min.css' rel='stylesheet')
    link(href='/stylesheets/font-awesome.min.css' rel='stylesheet')
    link(href='/stylesheets/style.css' rel='stylesheet')
    script(src='/javascripts/jquery.min.js' type='text/javascript')
    script(src='/javascripts/bootstrap.min.js' type='text/javascript')
    script(src='/javascripts/knockout-min.js' type='text/javascript')
    script(src='/javascripts/tweetboard.js' type='text/javascript')
    title TweetBoard - Sentiment Analysis Dashboard for Twitter
  body
    .container-fluid
      .row-fluid
        .centering.text-center.circular
          i.fa.fa-twitter
      .row-fluid
        .centering
          button.btn.btn-success(data-toggle='modal', data-target='#recordModal', data-bind="click: selectRecord") New
          table
            thead
              tr
                td Species
                td Size
                td Lake
                td Action
            // ko if: records().length
            tbody(data-bind='foreach: records')
              tr
                td(data-bind='text: species')
                td
                  span(data-bind='text: pounds')
                  span &nbsp;Lbs,&nbsp;
                  span(data-bind='text: ounces')
                  span &nbsp;Oz.
                td(data-bind='text: lake')
                td
                  button.btn.btn-primary(data-toggle='modal', data-target='#recordModal', data-bind="click: $parent.selectRecord") Edit
                  button.btn.btn-danger(data-bind="click: $parent.deleteRecord") Delete
            // /ko
